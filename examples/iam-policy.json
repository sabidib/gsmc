{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "GsmReadOnly",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeImages",
        "ec2:DescribeInstances",
        "ec2:DescribeKeyPairs",
        "ec2:DescribeSecurityGroups",
        "ec2:DescribeSnapshots",
        "ec2:DescribeAddresses",
        "ec2:DescribeSubnets",
        "ec2:DescribeVpcs"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GsmCreateResources",
      "Effect": "Allow",
      "Action": [
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:CreateSecurityGroup",
        "ec2:CreateSnapshot",
        "ec2:CreateTags",
        "ec2:DeleteKeyPair",
        "ec2:DeleteTags",
        "ec2:DeregisterImage",
        "ec2:ImportKeyPair",
        "ec2:RegisterImage",
        "ec2:RunInstances"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GsmInstanceLifecycle",
      "Effect": "Allow",
      "Action": [
        "ec2:StartInstances",
        "ec2:StopInstances",
        "ec2:TerminateInstances"
      ],
      "Resource": "arn:aws:ec2:*:*:instance/*",
      "Condition": {
        "StringLike": {
          "ec2:ResourceTag/gsm:id": "*"
        }
      }
    },
    {
      "Sid": "GsmElasticIP",
      "Effect": "Allow",
      "Action": [
        "ec2:AllocateAddress",
        "ec2:AssociateAddress",
        "ec2:DisassociateAddress"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GsmElasticIPRelease",
      "Effect": "Allow",
      "Action": [
        "ec2:ReleaseAddress"
      ],
      "Resource": "arn:aws:ec2:*:*:elastic-ip/*",
      "Condition": {
        "StringLike": {
          "ec2:ResourceTag/gsm:id": "*"
        }
      }
    },
    {
      "Sid": "GsmSnapshotLifecycle",
      "Effect": "Allow",
      "Action": [
        "ec2:DeleteSnapshot"
      ],
      "Resource": "arn:aws:ec2:*:*:snapshot/*",
      "Condition": {
        "StringLike": {
          "ec2:ResourceTag/gsm:id": "*"
        }
      }
    },
    {
      "Sid": "GsmSSM",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:PutParameter",
        "ssm:DeleteParameter"
      ],
      "Resource": "arn:aws:ssm:*:*:parameter/gsmc/*"
    }
  ]
}
